<div class="page-header">
  <h1>
    Plants
    <a href="/plants/new" class="btn btn-lg btn-success">New Plant</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Official Name</th>
        <th>Highlights</th>
        <th>Height</th>
        <th>Width</th>
        <th>Image</th>
        <th>Care</th>
        <th>Actions</th>
      </tr>

      <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.description %></td>
        <td><%= plant.official_name %></td>
        <td><%= plant.highlights %></td>
        <td><%= plant.height %></td>
        <td><%= plant.width %></td>
        <td><img src="<%= plant.image %>"  class="img-responsive"></td>
        <td><%= plant.care_id %></td>
        <td>
          <a href="/plants/<%= plant.id %>" class="btn btn-primary">Show</a>
          <a href="/plants/<%= plant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_plant/<%= plant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

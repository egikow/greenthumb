<div class="page-header">
  <h3>Care #<%= @care.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Light</dt>
      <dd><%= @care.light %></dd>

      <dt>Temperature</dt>
      <dd><%= @care.temperature %></dd>

      <dt>Water</dt>
      <dd><%= @care.water %></dd>

      <dt>Image</dt>
      <dd><%= @care.image %></dd>

      <dt>Warning</dt>
      <dd><%= @care.warning %></dd>

      <dt>Tip</dt>
      <dd><%= @care.tip %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cares" class="btn btn-primary">
        Back
      </a>
      <a href="/cares/<%= @care.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_care/<%= @care.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<div class="page-header">
  <h1>
    Sills
    <a href="/sills/new" class="btn btn-lg btn-success">New Sill</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Light</th>
        <th>Temperature Min</th>
        <th>Temperature Max</th>
        <th>Height</th>
        <th>Width</th>
        <th>Plant Selected</th>
      </tr>

      <% @sills.each do |sill| %>
      <tr>
        <td><%= sill.light %></td>
        <td><%= sill.temp_min %></td>
        <td><%= sill.temp_max %></td>
        <td><%= sill.height %></td>
        <td><%= sill.width %></td>
        <td><%= sill.plant_id %></td>
        <td>

          <div class="row">
            <div class="col-md-8 col-md-offset-2">

              <div class="btn-group btn-group-justified">
                <a href="/sills" class="btn btn-primary">
                  <i class="fa fa-chevron-left"></i>
                </a>
                <% if current_user.id == @sill.user_id %>
                  <a href="/sills/<%= @sill.id %>/edit" class="btn btn-warning">
                    <i class="fa fa-edit"></i>
                  </a>
                  <a href="/delete_photo/<%= @sill.id %>" class="btn btn-danger" rel="nofollow">
                    <i class="fa fa-trash-o"></i>
                  </a>
                <% end %>
              </div>
            </div>
          </div>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h1>
    Sills
    <a href="/sills/new" class="btn btn-lg btn-success">New Sill</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Light type</th>
        <th>Temperature Min</th>
        <th>Temperature Max</th>
        <th>Height</th>
        <th>Width</th>
      </tr>

      <% @sills.each do |sill| %>
      <tr>
        <td><%= sill.light %></td>
        <td><%= sill.temp_min %></td>
        <td><%= sill.temp_max %></td>
        <td><%= sill.height %></td>
        <td><%= sill.width %></td>
        <td>
          <a href="/sills/<%= sill.id %>" class="btn btn-primary">Show</a>
          <a href="/sills/<%= sill.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_sill/<%= sill.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

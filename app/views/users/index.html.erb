<div class="page-header">
  <h1>
    users
    <a href="/users/new" class="btn btn-lg btn-success">New user</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Availability</th>
        <th>Home temperature</th>
        <th>Fav color</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.availability %></td>
        <td><%= user.home_temperature %></td>
        <td><%= user.fav_color %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
          <a href="/users/<%= user.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
